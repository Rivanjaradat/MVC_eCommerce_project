@page
@model IndexModel
@{
    ViewData["Title"] = "الملف الشخصي";
   
}

<h3 class="text-end">@ViewData["Title"]</h3>


<div class="row" dir="rtl">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-end"></div>

            <div class="form-group mb-3 text-end">
                <label asp-for="Username" class="form-label">اسم المستخدم</label>
                <input asp-for="Username" class="form-control text-end" disabled />
            </div>

            <div class="form-group mb-3 text-end">
                <label asp-for="Input.PhoneNumber" class="form-label">رقم الهاتف</label>
                <input asp-for="Input.PhoneNumber" class="form-control text-end" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger d-block"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">حفظ</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Cairo', sans-serif;
        }

        .login-container {
            max-width: 420px;
            margin: 60px auto;
            background-color: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .btn-primary {
            background-color: #2A6640;
            border-color: #2A6640;
        }

        .btn-primary:hover {
            background-color: #245b37;
        }

        .form-title {
            font-size: 1.6rem;
            margin-bottom: 20px;
            color: #2A6640;
            font-weight: bold;
            text-align: center;
        }

        a {
            text-decoration: none;
        }

        .external-login button {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="form-title">تسجيل الدخول</div>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <input asp-for="Input.Email" class="form-control" placeholder="example@email.com" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                <input asp-for="Input.Password" class="form-control" placeholder="********" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">تذكرني</label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">تسجيل الدخول</button>
            </div>

            <div class="text-center mb-2">
                <a asp-page="./ForgotPassword" class="text-secondary">هل نسيت كلمة المرور؟</a>
            </div>

            <div class="text-center mb-2">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-secondary">مستخدم جديد؟ إنشاء حساب</a>
            </div>

           
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr />
            <div class="external-login text-center">
                <p>أو سجل الدخول باستخدام:</p>
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

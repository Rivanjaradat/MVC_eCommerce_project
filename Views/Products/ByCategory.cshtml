@model List<Product>
@{
    ViewData["Title"] = ViewBag.CategoryName;
}

<section dir="rtl" class="container py-5">
    <h2 class="text-center mb-5 fw-bold display-6 border-bottom pb-2">
        منتجات @ViewBag.CategoryName
    </h2>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
              
                    <div class="ratio ratio-4x3 rounded-top overflow-hidden">
                        <img src="@product.Image" class="card-img-top object-fit-cover" alt="@product.Name" />
                    </div>

                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <h5 class="fw-semibold">@product.Name</h5>
                        <p class="text-success fw-bold fs-5 mb-3">$@product.Price</p>

                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Details" asp-route-id="@product.Id" asp-controller="Products" class="btn btn-sm btn-outline-secondary px-3">تفاصيل</a>
                            <a asp-action="AddToCart" asp-route-productId="@product.Id" asp-controller="Cart" class="btn btn-sm btn-dark px-3">أضف إلى السلة</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_eCommerce_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_eCommerce_project.styles.css" asp-append-version="true" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

</head>
<body>

    @await Component.InvokeAsync("Ads")

    @await Component.InvokeAsync("Navigation")
    @await RenderSectionAsync("PageTitle", required: false)

   
  
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <footer dir="rtl" class="footer mt-5 text-white pt-5 pb-3" style="background-color: #1d1d1d;">
        <div class="container">
            <div class="row">
                <!-- معلومات عنا -->
                <div class="col-md-4 mb-4 text-center text-md-start">
                    <h5 class="fw-bold mb-3">عنا</h5>
                    <p>متجر شموع يقدم لكم منتجات فريدة ، مصنوعة بحب وشغف.</p>
                </div>

                <!-- روابط مهمة -->
                <div class="col-md-4 mb-4 text-center text-md-start">
                    <h5 class="fw-bold mb-3">روابط سريعة</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="footer-link">الرئيسية</a></li>
                        <li><a href="/Products" class="footer-link">المنتجات</a></li>
                        <li><a href="/Contact" class="footer-link">تواصل معنا</a></li>
                        <li><a href="/About" class="footer-link">عن المتجر</a></li>
                    </ul>
                </div>

                <!-- تابعنا -->
                <div class="col-md-4 mb-4 text-center text-md-start">
                    <h5 class="fw-bold mb-3">تابعنا</h5>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
